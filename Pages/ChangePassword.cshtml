@model Assignment.Pages.ChangePasswordModel
@section Scripts{
	<script>
		function validate() {
			var score = 0
			var str = document.getElementById('password').value;
			var lbl = document.getElementById('passwordfeedback');
			var error = document.getElementById('clientsidevalidation')
			if (str.length >= 12) {
				score += 1
			}
			if (str.search(/[0-9]/) != -1) {
				score += 1
			}
			if (str.search(/[A-Z]/) != -1) {
				score += 1
			}
			if (str.search(/[a-z]/) != -1) {
				score += 1
			}
			if (str.search(/[^a-zA-Z0-9]/) != -1) {
				score += 1
			}
			if (score == 1) {
				lbl.innerHTML = "Very Weak!";
				lbl.style.color = "Red";
				error.innerHTML="Error"
			}
			if (score == 2) {
				lbl.innerHTML = "Weak!";
				lbl.style.color = "Red";
			}
			if (score == 3) {
				lbl.innerHTML = "Medium!";
				lbl.style.color = "Red";
			}
			if (score == 4) {
				lbl.innerHTML = "Strong!";
				lbl.style.color = "Red";
			}
			if (score == 5) {
				lbl.innerHTML = "Excellent!";
				lbl.style.color = "Blue";
			}
		}
	</script>
}
<div class="container mt-5">

	<div class="row justify-content-center align-items-center">

		<div>
			<h1 class="mb-3">Change Password</h1>

			<br />

			<form method="post">
				<div asp-validation-summary="All" class="text-danger"></div>

				<div class="mb-3">
					<label class="form-label">Old Password</label>
					<input type="password" asp-for="oldPassword" class="form-control" />
				</div>

				<div class="mb-3">
					<div class="flex-row g-2">	
						<label class="form-label">New Password</label>
						<label style="margin-left:70%">Password Status: </label>
						<label id="passwordfeedback"></label>
					</diV>
					<input type="password" id="password" asp-for="Password" onkeyup="validate()" class="form-control" />
				</div>

				<div class="mb-3">
					<label class="form-label">Confirm Password</label>
					<input type="password" asp-for="confirmPassword" class="form-control" />
				</div>
				
				@Html.AntiForgeryToken()

				<div class="mb-3" style="margin-left:90%; margin-top:3%">
					<button type="submit" class="btn btn-primary">Register</button>
				</div>
			</form>
		</div>
	</div>
</div>
